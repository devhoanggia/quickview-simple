<?xml version="1.0"?>
<config>
    <modules>
        <Hgc_Quickview>
            <version>0.1.0</version>
        </Hgc_Quickview>
    </modules>
    <global>
        <models>
            <Hgc_Quickview>
                <class>Hgc_Quickview_Model</class>
                <resourceModel>Hgc_Quickview_resource</resourceModel>
            </Hgc_Quickview>
            <Hgc_Quickview_resource>
                <class>Hgc_Quickview_Model_Resource</class>
            </Hgc_Quickview_resource>
        </models>
        <blocks>
            <Hgc_Quickview>
                <class>Hgc_Quickview_Block</class>
            </Hgc_Quickview>
        </blocks>
        <helpers>
            <Hgc_Quickview>
                <class>Hgc_Quickview_Helper</class>
            </Hgc_Quickview>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <Hgc_Quickview>
                    <file>hgc_quickview.xml</file>
                </Hgc_Quickview>
            </updates>
        </layout>
        <routers>
            <quickview>
                <use>standard</use>
                <args>
                    <module>Hgc_Quickview</module>
                    <frontName>quickview</frontName>
                </args>
            </quickview>
        </routers>
    </frontend>
</config>